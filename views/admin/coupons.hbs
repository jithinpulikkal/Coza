                   <h6>Expiry Date : {{expiry}}</h6>
                   {{else}}
                   
                   <h6 class="text-danger">Coupon Expired</h6>
                   {{/if}}
                    </div>
                    
                    <a href="/admin/delete-coupon/{{_id}}"><i class="fa-solid fa-trash float-end text-white"></i></a>
                    <a href="/admin/edit-coupon/{{_id}}"><i class="fa-solid fa-pen-to-square text-white float-end pe-2"></i></a>
                </div>
            </div>
        </div>
        {{/each}}

    </div>
</div>
