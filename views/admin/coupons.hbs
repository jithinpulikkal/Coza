

<div class="head-img d-flex align-items-center justify-content-center mb-4">
    <h1 class=" text-white " style="text-shadow: 2px 1px 2px rgb(0, 0, 0);">Coupons</h1>
</div>
<div class="container mt-3 mb-1">
    <a class="add-coup-btn text-white py-2 px-3 float-end" href="/admin/add-coupon">Add Coupon</a>
</div>
<br>
<div class="container mt-4">
    <div class="row ">
        {{#each coupons}}
        <div class="col-xl-3 col-md-4">
            <div {{#if (eq status "Valid")}} class="card l-bg-blue-dark" {{else}} class="card l-bg-green-dark text-warning"  {{/if}}>
                <div class="card-statistic-3 p-4">
                    <h5>{{coupon}}</h5>
                    <div class="mb-4">
                       {{#if (eq disType 'percentage')}} <h6>{{discount}}% Off</h6>{{else}} <h6> â‚¹{{discount}} instant Discount</h6>{{/if}}
