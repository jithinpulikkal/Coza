<div class="head-img d-flex align-items-center justify-content-center mb-4">
    <h1 class=" text-white " style="text-shadow: 2px 1px 2px rgb(0, 0, 0);">Banner Images</h1>
</div>
<div class="container mt-2">
    <div class="row mt-3">
        
        <form action="/admin/update-banner" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-6">
            <img src="/Banner-images/banner.jpg" alt="" width="100%" class="shadow" id="main">
        </div>
        <div class="col-md-6">
            <small class="text-danger"> Size 1920x720 is recommended*</small><br>
                <label for="formFile" class="form-label">Sub Banner Image</label>
                <input class="form-control" type="file" id="formFile" name="mainBanner" onchange="viewImage(event,'main')" >
        </div>
        </div>
        <div class="row mt-4">
            <div class="col-md-6">
            <img src="/Banner-images/banner2.jpg" alt="" width="100%" class="shadow" id="sub">
        </div>
        <div class="col-md-6">
            <small class="text-danger"> Size 1148x568 is recommended*</small><br>
                <label for="formFile" class="form-label">Sub Banner Image</label>
                <input class="form-control" type="file" id="formFile" name="subBanner"  onchange="viewImage(event,'sub')">
        </div>
        </div>
        <div class="text-center mt-4 mb-5">
             <button type="submit" class="btn btn-primary">Update banner</button>
        </div>
        </form>
    </div>
</div>

<script>
    function viewImage(event,name) {
       
        document.getElementById(name).src = URL.createObjectURL(event.target.files[0])
    }
</script>