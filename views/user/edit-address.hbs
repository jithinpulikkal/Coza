<div class="container mt-5">
    <div class="row">
        
        <div class="col-md-6 offset-md-3 border">
            <h3 class="text-center">Edit Address</h3>
            <div class="container mt-4 mb-3">
                <form name="addAddress" onsubmit="return addAddressVali()" action="/edit-address/{{Address.index}}" method="post">
                    <input type="text" style="width: 100%; line-height: 35px;" class="mb-2" name="fname" placeholder="Firstname" value="{{Address.fname}}">
                    <input type="text" style="width: 100%; line-height: 35px;" class="mb-2" name="lname" placeholder="Lastname"  value="{{Address.lname}}">
                    <textarea name="address" id="" cols="30" rows="4" style="width: 100%;"  placeholder="Address">{{Address.address}}</textarea>
                    <input type="text" style="width: 100%; line-height: 35px;" class="mb-2" name="town" placeholder="Town" value="{{Address.town}}">
                    <input type="text" style="width: 100%; line-height: 35px;" class="mb-2" name="pincode" placeholder="Pincode" value="{{Address.pincode}}">
                    <select name="state" id="" style="width: 100%;height: 40px;" class="mb-2">
                        <option value="" >State</option>
                        <option value="kerala" {{#if (eq Address.state 'kerala')}}selected{{/if}}>Kerala</option>
                    </select>
                    <input type="text"  style="width: 100%; line-height: 35px;" class="mb-2" name="phone" placeholder="Mobile number" value="{{Address.phone}}">
                    <input type="email"  style="width: 100%; line-height: 35px;" class="mb-2" name="email" placeholder="Email Address" value="{{Address.email}}">
                    <p class="text-center text-danger" id="placeOrderErr"></p>
                   <div class="text-center">
                     <input type="submit" value="Update Address" class="mt-3 pt-2 pb-2 ps-3 pe-3 save-add-btn">
                   </div>
                </form>
            </div>
        </div>
    </div>
</div>