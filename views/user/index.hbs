<section class="pt-5" style="height: auto;">
    <h3 class="text-center">Latest Products</h3>
    <div class="container ">
        
        <div class="row ">
            {{#each products}}
            <div class="col-lg-3 col-md-6 col-6 latest">
                <div class="card" style="width: 18rem;" onclick="window.location.href='/product/{{_id}}'">
                    <img src="/product-images/{{Images.[0]}}.jpg" class="card-img-top" alt="..." onmouseenter="this.src='/product-images/{{Images.[1]}}.jpg'" onmouseout="this.src='/product-images/{{Images.[0]}}.jpg'">
                    <div class="card-body">
                        <p class="text-secondary mb-0" style="font-size: 14px;">{{brand}}</p>
                        <p class="mb-0">{{product}}</p>
                        <span style="text-decoration: line-through;" class="text-secondary">{{price}}</span> <span>{{offerPrice}}</span>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>

